{
  "name": "@cvplus/cv-processing",
  "version": "1.0.0",
  "description": "CVPlus CV Processing - Core CV analysis, generation, and processing functionality with AI integration",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./frontend": {
      "import": "./dist/frontend/index.esm.js",
      "require": "./dist/frontend/index.js",
      "types": "./dist/frontend/index.d.ts"
    },
    "./backend": {
      "import": "./dist/backend/index.esm.js",
      "require": "./dist/backend/index.js",
      "types": "./dist/backend/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.esm.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared/index.esm.js",
      "require": "./dist/shared/index.js",
      "types": "./dist/shared/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:rollup",
    "build:types": "tsc --project tsconfig.build.json",
    "build:rollup": "rollup -c",
    "build:watch": "npm run build:types -- --watch",
    "clean": "rimraf dist",
    "dev": "npm run build:watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@cvplus/auth": "file:../auth",
    "@cvplus/core": "file:../core",
    "canvas": "^2.11.2",
    "firebase": "^10.12.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1",
    "lodash": "^4.17.21",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.0",
    "sharp": "^0.32.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.9.1",
    "@types/pdfkit": "^0.13.4",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.15.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.4",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "Gil Klainert",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cvplus/cvplus.git",
    "directory": "packages/cv-processing"
  },
  "keywords": [
    "cv",
    "processing",
    "ai",
    "anthropic",
    "claude",
    "firebase",
    "pdf",
    "analysis",
    "generation",
    "cvplus"
  ]
}
